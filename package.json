{
  "name": "js-tdd-workshop",
  "version": "1.0.0",
  "description": "Test Driven Development workshop for those who familiar with JavaScript",
  "author": "alex.dukhno@icloud.com",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true npm run test:unit && npm run test:end-to-end",
    "test:unit": "react-scripts test",
    "eject": "react-scripts eject",
    "test:end-to-end": "start-server-and-test start http://localhost:3000 cypress",
    "cypress": "cypress run --browser chrome",
    "cypress:interactive": "cypress open"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cypress": "^3.1.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "start-server-and-test": "^1.7.9"
  }
}
